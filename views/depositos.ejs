    <h4 class="text-light" style="text-align: center; margin-top: 20px;">
        Depositos
    </h4>



    <form action="/users/depositos" method="POST" class="form-group justify-content-center mx-auto"
        style="width: 80%; margin-top: 30px;">
        <div class="form-group justify-content-center mx-auto" style="margin-top: 30px;">
            <label class="text-light" for="sel1">Seleccione una cuenta:</label>
            <select name="beyond" class="form-control" id="sel1">
                <% for (const cuenta of cuentas) { %>

                <option value=<%= cuenta.cuenta_id %>><%= cuenta.cuenta_tipo %>  $<%= cuenta.cuenta_saldo %></option>
                <% } %>
            </select>
        </div>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Monto</span>
            </div>
            <input name="forjo" id="monto" type="number" min="5" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
            <button class="btn btn-primary" type="submit" id="button-addon2">Depositar</button>

        </div>

    </form>


